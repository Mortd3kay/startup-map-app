<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StartAppFrontend" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color2</item>
        <item name="colorPrimaryDark">@color/grey</item>
        <item name="colorPrimaryVariant">@color/main_color3</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="input_style">
        <item name="android:background">@drawable/input_text_style</item>
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="background">@drawable/auth_btn</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="Theme.StartActivity" parent="Theme.StartAppFrontend">
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.AuthActivity" parent="Theme.StartAppFrontend">

        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowSharedElementEnterTransition">@transition/start_auth_logo_transition</item>

        <item name="android:windowSharedElementExitTransition">@transition/start_auth_logo_transition</item>
    </style>
</resources>