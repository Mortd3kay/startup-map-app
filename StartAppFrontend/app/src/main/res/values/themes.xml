<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StartAppFrontend" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.StartActivity" parent="Theme.StartAppFrontend">
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.AuthActivity" parent="Theme.StartAppFrontend">

        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowSharedElementEnterTransition">@transition/start_auth_logo_transition</item>

        <item name="android:windowSharedElementExitTransition">@transition/start_auth_logo_transition</item>
    </style>
</resources>